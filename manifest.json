{
  "manifest_version": 3,
  "name": "Gmail Signature Extension",
  "version": "1.0",
  "description": "Automatically adds signature when composing new emails in Gmail",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 